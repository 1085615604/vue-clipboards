{
  "name": "vue-clipboards",
  "version": "1.2.0",
  "description": "Vue2.0 directive to copy or cut text to clipboard.",
  "main": "dist/vue-clipboards.js",
  "files": [
    "dist"
  ],
  "repository": {
    "url": "git@github.com:zhuowenli/vue-clipboards.git",
    "type": "git"
  },
  "author": "卓文理 <531840344@qq.com>",
  "license": "MIT",
  "scripts": {
    "build": "npm run build:cjs && npm run build:umd",
    "build:cjs": "vbuild -c vbuild.component.js --format cjs",
    "build:umd": "vbuild -c vbuild.component.js --format umd",
    "dev": "vbuild -c vbuild.example.js -d",
    "deploy": "vbuild -c vbuild.example.js && gh-pages -d dist-example"
  },
  "devDependencies": {
    "babel-eslint": "~8.0.2",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.1.3",
    "eslint-config-vue": "^2.0.2",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-vue": "^2.0.1",
    "gh-pages": "^0.12.0",
    "highlightjs": "^9.10.0",
    "node-sass": "^4.5.2",
    "primer-css": "^6.0.0",
    "pug": "^2.0.0-rc.2",
    "sass-loader": "^6.0.5",
    "sweetalert2": "^7.0.5",
    "vbuild": "^6.0.0",
    "vbuild-karma": "^1.0.0"
  },
  "dependencies": {
    "clipboard": "^1.7.1"
  }
}
